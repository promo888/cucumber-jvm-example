<?xml version="1.0" encoding="UTF-8"?>
<project name="cucumber-jvm-example" default="all">
  
  
  <property file="ant-build.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="128m"/>
  <patternset id="ignored.files">
    <exclude name="**/CVS/**"/>
    <exclude name="**/SCCS/**"/>
    <exclude name="**/RCS/**"/>
    <exclude name="**/rcs/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/.pyc/**"/>
    <exclude name="**/.pyo/**"/>
    <exclude name="**/*.pyc/**"/>
    <exclude name="**/*.pyo/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/*.hprof/**"/>
    <exclude name="**/_svn/**"/>
    <exclude name="**/.hg/**"/>
    <exclude name="**/*.lib/**"/>
    <exclude name="**/*~/**"/>
    <exclude name="**/__pycache__/**"/>
    <exclude name="**/.bundle/**"/>
    <exclude name="**/*.rbc/**"/>
  </patternset>
  <patternset id="library.patterns">
    <include name="*.zip"/>
    <include name="*.apk"/>
    <include name="*.war"/>
    <include name="*.egg"/>
    <include name="*.ear"/>
    <include name="*.ane"/>
    <include name="*.swc"/>
    <include name="*.jar"/>
  </patternset>
  <patternset id="compiler.resources">
    <exclude name="**/?*.java"/>
    <exclude name="**/?*.form"/>
    <exclude name="**/?*.class"/>
    <exclude name="**/?*.groovy"/>
    <exclude name="**/?*.scala"/>
    <exclude name="**/?*.flex"/>
    <exclude name="**/?*.kt"/>
    <exclude name="**/?*.clj"/>
  </patternset>
  
  <!-- JDK definitions -->
  
  <property name="jdk.bin.1.7" value="${jdk.home.1.7}/bin"/>
  <path id="jdk.classpath.1.7">
    <fileset dir="${jdk.home.1.7}">
      <include name="jre/lib/charsets.jar"/>
      <include name="jre/lib/deploy.jar"/>
      <include name="jre/lib/javaws.jar"/>
      <include name="jre/lib/jce.jar"/>
      <include name="jre/lib/jfr.jar"/>
      <include name="jre/lib/jfxrt.jar"/>
      <include name="jre/lib/jsse.jar"/>
      <include name="jre/lib/management-agent.jar"/>
      <include name="jre/lib/plugin.jar"/>
      <include name="jre/lib/resources.jar"/>
      <include name="jre/lib/rt.jar"/>
      <include name="jre/lib/ext/access-bridge-64.jar"/>
      <include name="jre/lib/ext/dnsns.jar"/>
      <include name="jre/lib/ext/jaccess.jar"/>
      <include name="jre/lib/ext/localedata.jar"/>
      <include name="jre/lib/ext/sunec.jar"/>
      <include name="jre/lib/ext/sunjce_provider.jar"/>
      <include name="jre/lib/ext/sunmscapi.jar"/>
      <include name="jre/lib/ext/zipfs.jar"/>
    </fileset>
  </path>
  
  <property name="project.jdk.home" value="${jdk.home.1.7}"/>
  <property name="project.jdk.bin" value="${jdk.bin.1.7}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.1.7"/>
  
  
  <!-- Project Libraries -->
  
  <path id="library.maven:_info.cukes:cucumber-core:1.0.14.classpath">
    <pathelement location="${path.variable.maven_repository}/info/cukes/cucumber-core/1.0.14/cucumber-core-1.0.14.jar"/>
  </path>
  
  <path id="library.maven:_info.cukes:cucumber-java:1.0.14.classpath">
    <pathelement location="${path.variable.maven_repository}/info/cukes/cucumber-java/1.0.14/cucumber-java-1.0.14.jar"/>
  </path>
  
  <path id="library.maven:_info.cukes:cucumber-junit:1.0.14.classpath">
    <pathelement location="${path.variable.maven_repository}/info/cukes/cucumber-junit/1.0.14/cucumber-junit-1.0.14.jar"/>
  </path>
  
  <path id="library.maven:_junit:junit:4.11.classpath">
    <pathelement location="${path.variable.maven_repository}/junit/junit/4.11/junit-4.11.jar"/>
  </path>
  
  <path id="library.maven:_log4j:log4j:1.2.14.classpath">
    <pathelement location="${path.variable.maven_repository}/log4j/log4j/1.2.14/log4j-1.2.14.jar"/>
  </path>
  
  <path id="library.maven:_org.hamcrest:hamcrest-core:1.3.classpath">
    <pathelement location="${path.variable.maven_repository}/org/hamcrest/hamcrest-core/1.3/hamcrest-core-1.3.jar"/>
  </path>
  
  <path id="library.maven:_org.slf4j:jcl-over-slf4j:1.7.0.classpath">
    <pathelement location="${path.variable.maven_repository}/org/slf4j/jcl-over-slf4j/1.7.0/jcl-over-slf4j-1.7.0.jar"/>
  </path>
  
  <path id="library.maven:_org.slf4j:slf4j-api:1.7.0.classpath">
    <pathelement location="${path.variable.maven_repository}/org/slf4j/slf4j-api/1.7.0/slf4j-api-1.7.0.jar"/>
  </path>
  
  <path id="library.maven:_org.slf4j:slf4j-log4j12:1.7.5.classpath">
    <pathelement location="${path.variable.maven_repository}/org/slf4j/slf4j-log4j12/1.7.5/slf4j-log4j12-1.7.5.jar"/>
  </path>
  
  
  <!-- Global Libraries -->
  
  <!-- Modules -->
  
  
  <!-- Module cucumber-jvm-example -->
  
  <dirname property="module.cucumber-jvm-example.basedir" file="${ant.file}"/>
  
  
  <property name="module.jdk.home.cucumber-jvm-example" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.cucumber-jvm-example" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.cucumber-jvm-example" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.cucumber-jvm-example" value="${compiler.args}"/>
  
  <property name="cucumber-jvm-example.output.dir" value="${module.cucumber-jvm-example.basedir}/target/classes"/>
  <property name="cucumber-jvm-example.testoutput.dir" value="${module.cucumber-jvm-example.basedir}/target/test-classes"/>
  
  <path id="cucumber-jvm-example.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="cucumber-jvm-example.module.production.classpath">
    <path refid="${module.jdk.classpath.cucumber-jvm-example}"/>
    <path refid="library.maven:_org.slf4j:slf4j-log4j12:1.7.5.classpath"/>
    <path refid="library.maven:_log4j:log4j:1.2.14.classpath"/>
  </path>
  
  <path id="cucumber-jvm-example.runtime.production.module.classpath">
    <pathelement location="${cucumber-jvm-example.output.dir}"/>
    <path refid="library.maven:_org.slf4j:slf4j-log4j12:1.7.5.classpath"/>
    <path refid="library.maven:_org.slf4j:slf4j-api:1.7.0.classpath"/>
    <path refid="library.maven:_log4j:log4j:1.2.14.classpath"/>
    <path refid="library.maven:_org.slf4j:jcl-over-slf4j:1.7.0.classpath"/>
  </path>
  
  <path id="cucumber-jvm-example.module.classpath">
    <path refid="${module.jdk.classpath.cucumber-jvm-example}"/>
    <pathelement location="${cucumber-jvm-example.output.dir}"/>
    <path refid="library.maven:_org.slf4j:slf4j-log4j12:1.7.5.classpath"/>
    <path refid="library.maven:_org.slf4j:slf4j-api:1.7.0.classpath"/>
    <path refid="library.maven:_log4j:log4j:1.2.14.classpath"/>
    <path refid="library.maven:_org.slf4j:jcl-over-slf4j:1.7.0.classpath"/>
    <path refid="library.maven:_junit:junit:4.11.classpath"/>
    <path refid="library.maven:_org.hamcrest:hamcrest-core:1.3.classpath"/>
    <path refid="library.maven:_info.cukes:cucumber-java:1.0.14.classpath"/>
    <path refid="library.maven:_info.cukes:cucumber-core:1.0.14.classpath"/>
    <path refid="library.maven:_info.cukes:cucumber-junit:1.0.14.classpath"/>
  </path>
  
  <path id="cucumber-jvm-example.runtime.module.classpath">
    <pathelement location="${cucumber-jvm-example.testoutput.dir}"/>
    <pathelement location="${cucumber-jvm-example.output.dir}"/>
    <path refid="library.maven:_org.slf4j:slf4j-log4j12:1.7.5.classpath"/>
    <path refid="library.maven:_org.slf4j:slf4j-api:1.7.0.classpath"/>
    <path refid="library.maven:_log4j:log4j:1.2.14.classpath"/>
    <path refid="library.maven:_org.slf4j:jcl-over-slf4j:1.7.0.classpath"/>
    <path refid="library.maven:_junit:junit:4.11.classpath"/>
    <path refid="library.maven:_org.hamcrest:hamcrest-core:1.3.classpath"/>
    <path refid="library.maven:_info.cukes:cucumber-java:1.0.14.classpath"/>
    <path refid="library.maven:_info.cukes:cucumber-core:1.0.14.classpath"/>
    <path refid="library.maven:_info.cukes:cucumber-junit:1.0.14.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.cucumber-jvm-example">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.cucumber-jvm-example">
    <patternset refid="excluded.from.module.cucumber-jvm-example"/>
  </patternset>
  
  <path id="cucumber-jvm-example.module.sourcepath">
    <dirset dir="${module.cucumber-jvm-example.basedir}">
      <include name="src/test/resources"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.cucumber-jvm-example" depends="compile.module.cucumber-jvm-example.production,compile.module.cucumber-jvm-example.tests" description="Compile module cucumber-jvm-example"/>
  
  <target name="compile.module.cucumber-jvm-example.production" description="Compile module cucumber-jvm-example; production classes">
    <mkdir dir="${cucumber-jvm-example.output.dir}"/>
    <javac destdir="${cucumber-jvm-example.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.cucumber-jvm-example}/javac">
      <compilerarg line="${compiler.args.cucumber-jvm-example}"/>
      <bootclasspath refid="cucumber-jvm-example.module.bootclasspath"/>
      <classpath refid="cucumber-jvm-example.module.production.classpath"/>
      <src refid="cucumber-jvm-example.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.cucumber-jvm-example"/>
    </javac>
    
    <copy todir="${cucumber-jvm-example.output.dir}">
      <fileset dir="${module.cucumber-jvm-example.basedir}/src/test/resources">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.cucumber-jvm-example.tests" depends="compile.module.cucumber-jvm-example.production" description="compile module cucumber-jvm-example; test classes" unless="skip.tests"/>
  
  <target name="clean.module.cucumber-jvm-example" description="cleanup module">
    <delete dir="${cucumber-jvm-example.output.dir}"/>
    <delete dir="${cucumber-jvm-example.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.cucumber-jvm-example" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.cucumber-jvm-example" description="build all modules"/>
  
  <target name="all" depends="build.modules" description="build all"/>
</project>